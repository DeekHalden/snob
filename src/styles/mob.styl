.swiperH-pagination
    
    display: flex !important;
    justify-content: space-between;
    align-items: flex-start;
    flex-direction: column;
    .swiper-pagination-bullet
        display block
        width auto
        height 20px
        color #fff
        margin-bottom 20px
        opacity 1
        background none
        position relative
        text-align left
        padding-left 40px
        letter-spacing 5px
        font-size 11px
        line-height 18px
            
        &:after
            content ''
            opacity .2
            position absolute
            background #fff
            width 20px
            left 0
            top 0
            height 20px
            transform rotate(45deg)
        &.swiper-pagination-bullet-active
            &:before
                content ''
                left 0
                position absolute
                top 0
                width 20px
                height 20px
                opacity 1
                z-index 1
                background $gold
                transform rotate(45deg)
            &:after
                z-index -1
                opacity 1
                background-image: linear-gradient( 360deg, rgba($gold), rgba(255,255,255,.45) 100%)
