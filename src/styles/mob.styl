$gold = #af9358
$grad = #353638
$transition = .5s ease all
@font-face 
    font-family Roboto-reg
    src url(./../fonts/Roboto-Regular.ttf)
@font-face 
    font-family Times-new-roman
    font-weight normal
    src url(./../fonts/times-new-roman.ttf)
$times = Times-new-roman
*
    margin 0
    padding 0
    box-sizing border-box

@import "./icomoon.css" 
@import "./normalize.css" 
@import "./swiper.min.css"
@import "grid"

body
    font-family Roboto-reg 
    width 100%;
    text-align center
    overflow-x hidden
canvas
    position: absolute
    top 0
    bottom 0
    left 0
    z-index 1
.main-container
    overflow hidden
    visibility hidden
    background-color #000
    position relative
    // position absolute
    // height 100%
    visibility visible;
    &--active
        overflow auto;
        
.main-text-start
    text-transform uppercase
    font-size 14px
    display none
    position absolute
    top calc(50% + 255px)
    left 50% 
    transform translateX(-50%) translateY(-50%)
    cursor pointer
.swiper-slide, .swiper-wrapper
    background-color black
    height auto
    width 100%
.text
    z-index 132
    position fixed
    width 100%
    color $gold
    padding 10px 0
    background-color #000
    transition .2s linear all

    &:before, &:after
        transition .2s linear all
    &__left
        display none
        background-color #000
        position fixed
        left 0 
        top 0
        width 20px
        height 100%
        transition .2s linear all
        &:before, &:after
            content ''
            transition .2s linear all
    &--active
        &:before, &:after
            content ''
            position absolute
            bottom 0
            left 20px
            width 100%
            z-index 1
            height 4px
            transition .2s linear all
        &:before
            background-image: linear-gradient( 90deg, rgba($gold,.44)  0%,  rgba($gold, .44) 100%);
        &:after
            background-image: linear-gradient( 90deg, rgba(255,255,255,.44) 0%, rgba(53,54,56, .44)  100%);
            
        .text__left
            
            &:before, &:after
                top 32px
                content ''
                position absolute
                right 0
                width 4px
                height 100%
                z-index 1
                transition .2s linear all
            &:before
                background-image: linear-gradient( 360deg, rgba($gold, 0) 0%, rgba($gold, .44) 1%, rgba($gold,.44) 100%);
            &:after
                background-image: linear-gradient( 360deg, rgba(53,54,56, .44) 0%, rgba(255,255,255,.44) 100%);

    p
        text-transform uppercase
        display inline-block
        font-size 14px
        margin 0
    &__goto
        display none
        position absolute
        left 10px
        top 10px
        z-index 213
        
        
.swiper-slide
    
    
    position relative
    transition .5s linear all
    &--active
        background-color #fff
    h2, p
        letter-spacing 2px
        font-family $times
    
    &__head-description
        position relative
        z-index 1
        top -10px
        color #fff
        h2
            padding-left 15px
            letter-spacing 9px
            text-align left
            font-size 26px
            font-weight 100
            text-transform uppercase
            word-break break-all
        p
            padding-right 15px
            font-size 15px
            text-align right
    &__main-content
        width 305px 
        position absolute
        top 35%
        left 50%
        transform translateX(-50%) translateY(-50%)
    &__face-cont
        margin-top 20px
    &__face
        z-index 0
        display block
        height 190px
        margin 0 auto
         
    &__main-wrapper
        position relative
        min-height 100vh
        .swiper-slide__goto
            position absolute
            bottom -130px
            left 50%
            transform translateX(-50%)
    &__additional-wrapper
        position relative
        margin-top 20px
        min-height 100vh
        color #fff
        &--map
            background-color #000
            margin-top  0
            
        &--active
            color #000
            .swiper-slide__goto
                background  url('./../images/downarrow--black.png') no-repeat center
        h2
            font-family $times
            text-transform uppercase
            position relative
            text-align left
            padding-left 10px
            z-index 1
            letter-spacing 4px
        p
            margin-bottom 40px
            line-height 2em
            text-align left
            letter-spacing 2px
            font-size 15px 
        &:nth-of-type(2)
            h2
                text-align center
                width 100%
                position absolute
                z-index 1
                top 50px
                left 50%
                transform translateX(-50%)
                color #fff
        &:last-of-type
            .swiper-slide__goto
                position fixed
                top 0
                color #fff
        &:nth-of-type(2), &:nth-of-type(3)
            .swiper-slide__goto
                bottom 0px    
        &:nth-of-type(5), &:nth-of-type(6)
            min-height initial
        &:not(:nth-of-type(2))
            h2
                
                // padding-top 80px
                margin-bottom 40px
                &:after
                    z-index -1
                    content ''
                    position absolute
                    width 200%
                    height 4px
                    left 0
                    bottom 5px
                    background-image linear-gradient(90deg, rgba($gold, 1), rgba($gold, .45))

    &__small-face
        opacity .35
        display block
        height 150px
    &__img-wrapper
        width 100%
        position relative
    &__img-mask
        width 100%
        height 100%
        position absolute
        top 0
        background-color rgba(255,255,255, .4)
    &__img-fluid
        display block
        width 100%
        
    &__goto
        position absolute
        left 50% 
        transform  translateX(-50%)
        bottom 0px 
        background  url('./../images/downarrow.png') no-repeat center
        display block
        width 30px
        height 60px
        
        margin 0 auto
        background-size contain
        
        // &:after
        //     content ''
        //     position absolute
        //     bottom -50px
        //     left 50%
        //     transform translateX(-50%)
        
.map-container
    display block
    // background #000 url('./../images/map.png') no-repeat center
    // background-size contain
    // height 700px
    position absolute
    background-color #000
    top 50%
    right 50% 
    transform translateY(-50%) translateX(50%)
    &__bg-img
        margin 0 auto
        display block
        max-height 170px
        // height 100%
    &__content
        position relative
        pointer-events none
        width 100%
        height 100%
    &__dot-description
        position absolute
        right 48%
        bottom 100px
        transform translateX(50%)
        width 900px
        p
            text-align right
            &:not(:first-child)
                display none
    &__dot
        transform rotate(45deg)
        position absolute
        color $gold
        font-size 32px
        &:nth-of-type(1)
            top 20% 
            left 10%
        &:nth-of-type(2)
            top 20%
            left 45%
            font-size 16px
        &:nth-of-type(3)
            left 45%
            top 70%
            font-size 16px
            
        &:nth-of-type(4)
            left 70%
            top 20%
            font-size 16px
        
        &:nth-of-type(5)
            top 44%
            left 30%
            font-size 16px
        &:nth-of-type(6)
            left 30%
            top 22%
        &:nth-of-type(7)
            font-size 16px
            top 88%
            left 20%
        &:nth-of-type(8)
            font-size 16px
            left 60%
            top 22%
        &:nth-of-type(9)
            left 80%
            top 42%
            font-size 16px
        &:nth-of-type(10)
            top 72%
            left 90%
            font-size 16px
.intro
    position relative
    background-color #000
    // display none
    // height 100% 
    &__logo
        display block
        max-width 100%
    &__text
        margin-top -70px
        h2
            font-size 16px
            font-weight 100
            color #fff
            text-align left
            letter-spacing 4px
            line-height 26px
    &__enter
        display block
        margin 0 auto 
        padding-bottom 40px
        bottom 80px
        left 50%
        // position absolute
        img
            display block
            transform  rotate(-45deg)
            width 56px
            margin 0 auto
.swiper-pagination
    pointer-events none
    width 100%
    top -100px
    position absolute
    height 25%
    display flex 
    align-items center
    background-color transparent
    transition 0s
    top 240px
    height 260px
    &--active
        top 240px
    .swiper-wrapper
        pointer-events auto
        align-items center
        width 100%
        overflow visible
        background-color transparent
        .swiper-slide-active
            width 56px 
            height 56px 
            position relative
            &:before
                top 0
                left 0
                position absolute
                content ''
                background url('./../images/big-diamond.svg') no-repeat center
                background-size contain
                width 56px 
                transform rotate(-45deg)
                height 56px 

            
    &__swiper-slide
        background url('./../images/mob.png') no-repeat center
        background-size 14px
        // width value
        width 56px 
        
        height 56px 
            
        &.swiper-slide-next, &.swiper-slide-prev
            background-size 28px
            width 56px 
            height 56px 
        &.swiper-slide-next
            background-position right center
        &.swiper-slide-prev
            background-position left center
            
        
        
            
@media(orientation: portrait) 
    .intro
        min-height 100vh
        &__enter
            transform  translateX(-50%) translateY(50%) 
            position absolute
    .swiper-slide
        &__text-wrapper
            &--active
                padding-left value

        
@media(orientation: landscape) 
    .intro
        &__logo
            margin 0 auto
            max-width 69%    
    .swiper-slide
        &__main-content
            top 50%
        &__head-description
            h2, p
                text-align center
        &__small-face
            margin 0 auto
        &__main-wrapper
            margin-bottom 150px
            .swiper-slide__goto
                bottom -165px
        &__additional-wrapper
            margin-top 20px
            &:nth-child(2)
                h2
                    padding-top 40px !important
                    text-align center
            &:last-child
                margin-top 0