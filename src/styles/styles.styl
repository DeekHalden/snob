.range-slider
    width: calc(100% - 280px);
    position absolute
    top 50%
    left 140px
    margin 0 auto
    z-index 2
    transform translateY(-50%)
    &__anchors
        position relative
        opacity 0
        transition .2s ease all
        &--important
            display block 
            opacity 1 
    &__anchor
