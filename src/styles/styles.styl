.swiperV-pagination
    position fixed
    z-index 1
    top 0
    bottom 0px
    right auto
    left 0
    width 400px
    height 100%
    background-color #000
    transform translateX(0) 
    flex-direction column
    justify-content center
    align-items center
    display flex
    transition .5s linear all
    left -400px
    opacity 0
    &--active
        opacity 1
        background #000 url('./../images/indicator.png') no-repeat 131px center
        left 0
    // &:after
    //     content ''
    //     position absolute
    //     z-index 1
    //     height 100%
    //     width 20px
    //     top 50%
    //     transform translateY(-50%)
    //     left 123px
    .swiper-pagination-bullet
        
        position relative
        
        font-size 0
        border-radius 0
        width 28px
        height 28px
        left 40px
        opacity 0
        margin 50px 0 !important
        background url('./../images/pagination-anchor.png') no-repeat center
        background-size contain
        transition .2s linear all
        // &:before
        //     content ''
        //     display block
        //     width 20px
        //     height 20px
        //     transform rotate(-45deg)
            
            
        
        &--active:not(.swiper-pagination-bullet-active)
            opacity 1
            
        &:first-child
            margin 0 !important
            background transparent url('./../images/angle-down.png') no-repeat center
            
            background-size contain
            position absolute
            width 30px
            height 30px
            top 15px 
            left 50%
            opacity 1
            transform translateX(-50%) rotate(180deg)
            &:before
                display none
            &:hover
                opacity .7


        &.swiper-pagination-bullet-active
        
            // background-size: 20px 20px !important;
            position relative
            background: url('./../images/diamond-mobile.png') no-repeat center;
            background-size contain
            opacity 0
            left 39px
            width 28px
            height 28px
            &.swiper-pagination-bullet--active
            
                opacity 1
            &:before
                left -94px
                content ''
                z-index 2
                position: absolute;
                width: 1px;
                
            &:after
                left: -104px;
                content: '-';
                color: #fff;
                background-color: #fff;
                width: 20px;
                height: 1px;
                display: block;
                position: absolute;
                top: 13px;
        &:nth-child(2)
            &.swiper-pagination-bullet-active
                &.swiper-pagination-bullet--active
                    &:before
                        background-image: linear-gradient( 180deg, rgba(255,255,255,1), rgba(255,255,255,.45) 100%)
                        background-size contain
                        height: 300px;
                        top -20px
        &:nth-child(3)
            &.swiper-pagination-bullet-active
                &.swiper-pagination-bullet--active
                    &:before
                        
                        background-image: linear-gradient( 180deg, rgba(255,255,255,.45) 0%, rgba(255,255,255,1) 25%, rgba(255,255,255,.45) 100%)
                        top -146px
                        height: 300px;

        &:nth-child(4)
            &.swiper-pagination-bullet-active
                &.swiper-pagination-bullet--active
                    &:before
                        background-image: linear-gradient( 180deg, rgba(255,255,255,.1) 0%, rgba(255,255,255,1) 50%, rgba(255,255,255,.1) 100%)
                        top -150px
                        height: 300px;

        &:nth-child(5)
            &.swiper-pagination-bullet-active
                &.swiper-pagination-bullet--active
                    &:before
                        background-image: linear-gradient( 180deg, rgba(255,255,255,.45) 0%, rgba(255,255,255,1) 75%, rgba(255,255,255,.45) 100%)
                        top -126px
                        height: 300px;
        &:nth-child(6)
            &.swiper-pagination-bullet-active
                &.swiper-pagination-bullet--active
                    &:before
                        background-image: linear-gradient( 180deg, rgba(255,255,255,.45), rgba(255,255,255,1) 100%)
                        top -253px
                        height 300px
                
.go-top
    position absolute
    top 10px
    color #fff
    z-index 123
    display none
    left 30px
    cursor pointer
    
.swiperH-pagination
    display: flex !important;
    justify-content: space-between;
    align-items: flex-end;
    flex-direction: column;
    .swiper-pagination-bullet
        display block
        width auto
        height 20px
        color #fff
        opacity 1
        background none
        position relative
        text-align right
        padding-right 40px
        letter-spacing 5px
        & + .swiper-pagination-bullet 
            margin-top 256px
            
        &:after
            opacity .2
            position absolute
            content ''
            background #fff
            width 20px
            right 0
            height 20px
            transform rotate(45deg)
            
        &:first-child, &:nth-child(3), &:nth-child(5), &:nth-child(7)
            display none
        &:nth-child(2)
            margin-top 0 !important
        &.swiper-pagination-bullet-active
            &:before
                opacity 1
                z-index -2
                background-color $gold
            &:after
                z-index -1
                opacity 1
                background-image: linear-gradient( 360deg, rgba($gold), rgba(255,255,255,.45) 100%)
            
