$gold = #af9358
$transition = .5s ease all
@font-face 
    font-family Roboto-reg
    src url(./../fonts/Roboto-Regular.ttf)
    
*
    box-sizing border-box

@import "./normalize.css" 
@import "./ion.rangeSlider.css" 
@import "./ion.rangeSlider.skinFlat.css"
@import "./swiper.min.css"

body 
    width 100%;
    font-family Roboto-reg
    text-align center
    overflow hidden
    
    margin 0
    
.body
    background-color #fff
    transition 5s ease all
    &--dark
        background-color #0E0C0E
canvas
    position: absolute
    top 0
    left 0
    z-index 1
    

a
    transition $transition 
    font-size 20px
    &:hover
        color $gold
.menu-toggler
    display: none
    z-index 10
    position absolute
    top 50px
    left 50%
    transform  translateX(-50%)
    cursor pointer
    font-size 20px
    &--active
        color #fff
.main-text
    text-transform uppercase
    display none
    position absolute
    top 52%
    left 50%
    transform translateY(-50%) translateX(-50%)
    p
        font-size 20px
        font-weight 600
.main-text-start
    text-transform uppercase
    font-size 20px
    font-weight 600
    display none
    position absolute
    top calc(50% + 255px)
    left 50% 
    transform translateX(-50%) translateY(-50%)
    cursor pointer
.slider-container
    z-index: 1
    width auto
    height 100vh
    position relative
    &:after
        z-index 1
        transform translateY(-50%)
        transition $transition
        pointer-events none
        left 0
        position absolute
        top 50%
        background-image: linear-gradient(to right, rgba(18,17,18,.6) 33%, rgba(255,255,255,0) 0%);
        background-position: bottom;
        background-size: 7px 2px;
        background-repeat: repeat-x;
        content ''
        width 100%
        font-size 30px
        height 2px
        // border-bottom 3px dotted #000
    &--light
        &:after
            background-image: linear-gradient(to right, white 33%, rgba(0,0,0,0) 0%);
            // border-bottom 3px dotted #fff
    
    
.range-slider
    width: calc(100% - 280px);
    position absolute
    top 50%
    left 140px
    margin 0 auto
    z-index 2
    transform translateY(-50%)
    &__anchors
        position relative
        opacity 0
        transition .2s ease all
        &--important
            display block 
            opacity 1 
    &__anchor
        background url('./../images/diamond-anchor.svg') no-repeat center
        position absolute
        top 4px
        width 33px 
        height 33px
        display block
        transition 2s ease all
        &--bordered
            background url('./../images/diamond-anchor-bordered.svg') no-repeat center
        &:nth-child(1)
            left -16px
        &:nth-child(2)    
            left 30%
        &:nth-child(3)
            right 30%
        &:nth-child(4)
            right -1px


.swiper-container 
    width 100%
    height 100%
    &--active
        z-index 2
.swiper-slide
    height 100%
    // background-color #fff
    position relative
    &.menu-wrapper
        background #0E0C0E
        p
            color #fff
    &--bottom
        background #fff
        z-index 123
    &:nth-child(2n + 3)
        background-color #0E0C0E
    &__head-description
        // display none
        position absolute
        margin 0 auto
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        color #fff
        text-align right
        max-width 800px
    &__description
        text-align right
        font-weight 100
        line-height 2px
        font-size 24px
        letter-spacing 4px
    &__goto-wrapper
        bottom 0px
        left 0
        right 0px
        height 50px
        position fixed
        transform translateX(-50%) translateY(-50%)
    &__goto
        cursor pointer
        text-decoration none
        color #fff
        &:hover
            color $gold
    .text
        font-weight 100
        font-size 30px  
        line-height 22px      
        color inherit
        position absolute
        right -100%
        transition .1s linear all
        text-align left
        bottom  10%
        width: 100%
        border-bottom 9px solid #af9358
        border-radius 5px
        &--active
            transition 3s linear all
            right -100% !important
    .video-cont
        position fixed
        top calc(50% - 120px)
        left 0
        right 0
        transform translateY(-50%)
    .video
        // display none
        position absolute
        top 40%
        left 50%
        transform translateY(-50%) translateX(-50%)
        &--active
            display block

    &__text
        max-width 900px
        font-weight 100
        text-align left
        font-size 115px
        position absolute
        // left -100%
        top 70%
        transform translateY(-50%)
        transition 1s linear all
        &.active--left
            left 50%
            transform translateY(-50%) translateX(-50%)
        &.active--right
            left 100%
            
    
    &__paragraph
        letter-spacing 30px
        display inline-block        
        max-width 1100px
        height 79px
        margin 0 
        line-height 54px
        color transparent
        position relative
        transition 2s linear all
        transition-delay 2s
        &--active
            color #fff
            // transition .5s linear all
            // transition-delay 0s
        // &--hidden
        //     color transparent
            
        &:after
            visibility visible
            left 0
            content ''
            position absolute
            bottom 0
            width 100%
            height 9px 
            background-color #af9358
