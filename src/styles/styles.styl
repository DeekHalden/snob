.range-slider
    width: calc(100% - 280px);
    position absolute
    top 50%
    left 140px
    margin 0 auto
    z-index 2
    transform translateY(-50%)
    &__anchors
        position relative
        opacity 0
        transition .2s ease all
        &--important
            display block 
            opacity 1 
    &__anchor
        background url('./../images/diamond-anchor.svg') no-repeat center
        position absolute
        top 4px
        width 33px 
        height 33px
        display block
        transition 2s ease all
        &--bordered
            background url('./../images/diamond-anchor-bordered.svg') no-repeat center
        &:nth-child(1)
            left -16px
        &:nth-child(2)    
            left 30%
        &:nth-child(3)
            right 30%
        &:nth-child(4)
            right -1px


.swiper-container 
    width 100%
    height 100%
    transition 1s ease all
    z-index 1
    &--active
        transition 2s ease all !important
        z-index 2
.swiper-container-v
    .swiper-slide
        background-color #000 !important
    // .swiper-slide:not(:first-child),  .swiper-slide:not(:nth-child(2))
    //     background-color #fff
    .swiper-slide
        transition 1s ease all
    
        
.swiperV-pagination
    position fixed
    z-index 1
    top 0
    bottom 0px
    right auto
    left 0
    width 470px
    height 100%
    background-color #000
    transform translateX(0) 
    flex-direction column
    justify-content center
    align-items center
    display flex
    transition .5s linear all
    left -470px
    &--active
        background #000 url('./../images/indicator.png') no-repeat 126px center
        left 0
    // &:after
    //     content ''
    //     position absolute
    //     z-index 1
    //     height 100%
    //     width 20px
    //     top 50%
    //     transform translateY(-50%)
    //     left 123px
    .swiper-pagination-bullet   
        transition .5s ease all
        position relative
        background-color #fff
        font-size 0
        border-radius 0
        width 20px
        height 20px
        transform rotate(45deg)
        opacity 0
        margin 50px 0 !important
        &--active
            opacity .2
        &:first-child
            display none
        &.swiper-pagination-bullet-active
            transition .5s ease all
            background: url('./../images/big-diamond.svg') no-repeat center;
            background-size: 20px 20px !important;
            position relative
            opacity 1
            &:before
                z-index 2
                transition .5s ease all
                position: absolute;
                content: '-';
                width: 1px;
                height: 20px;
                color: #fff;
                left: -100px;
                background: #fff;
                transform: rotate(45deg);
                left: -68px;
                top: 77px;
.swiper-slide
    height 100%
    // background-color #fff
    position relative
    &--first
        // transition-delay 1s
        background-color #000
    .wrapper
        width 100%
        height 100%
        transition 1s linear all
        background-color #fff
        right -100%
        position relative
            // transform  translateX(50%)
        &--active-top
            top -100%
        &--black
            right -100%
            position absolute
        &--black-active
            right 30%
            right 0
    &.menu-wrapper
        background #000
        h1
            color #fff
    &--map
        background-color #000 !important
    &--bottom
        background #fff
        z-index 123
    &:nth-child(2n + 3)
        background-color #000
    &__img-wrapper
        position absolute
        background-color rgba(255,255,255,.3)
    &__head-description
        // display none
        position absolute
        margin 0 auto
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        color #fff
        text-align right
        max-width 800px
    &__description
        text-align right
        font-weight 100
        line-height 2px
        font-size 24px
        letter-spacing 4px
    &__goto-wrapper
        bottom 0px
        left 0
        right 0px
        height 50px
        position fixed
        transform translateX(-50%) translateY(-50%)
    &__goto
        cursor pointer
        text-decoration none
        color #fff
        &:hover
            color $gold
    .text
        font-weight 100
        font-size 30px  
        line-height 22px      
        color inherit
        position absolute
        right -100%
        transition .1s linear all
        text-align left
        bottom  10%
        width: 100%
        border-bottom 9px solid #af9358
        border-radius 5px
        &--active
            transition 1.5s linear all
            right -100% !important
    .video-cont
        position fixed
        top calc(50% - 120px)
        left 0
        right 0
        transform translateY(-50%)
    .video
        display none
        position absolute
        top 40%
        left 50%
        transform translateY(-50%) translateX(-50%)
        &--active
            display block

    &__text
        max-width 1000px
        font-weight 100
        text-align left
        font-size 90px
        position absolute
        left 50%
        transform translateX(-50%) translateY(-50%)
        top 70%
        color transparent
        transition 1.5s linear all
        transition-delay .5s
        &--active
            color #fff
            // transition-delay 0s
    &__paragraph
        letter-spacing 30px
        display inline-block        
        height 79px
        margin 0 
        color inherit
        line-height 54px
        position relative
        margin-right -30px
        &:after
            visibility visible
            left 0
            content ''
            position absolute
            bottom 10px
            width calc(100% - 30px)
            height 9px 
            background-color #af9358
    &__content
        padding-top 250px
        position relative
        color transparent
        width 920px
        margin-left auto
        margin-right 7vw
        transition-delay 0s
        transition 1s linear all
        &--active
            color #000
        h3
            @extends .swiper-slide__paragraph
            text-transform uppercase
            font-size 50px
            font-weight bold
            letter-spacing 30px
            z-index 1
            color inherit
            margin-bottom 150px
            &:after
                z-index -1
                visibility: visible;
                left: 0;
                content: '';
                position: absolute;
                bottom: 34px;
                width: 200%;
                height: 20px;
                background-color: #af9358;
            
        p
            color inherit
            text-align left
            font-size 17px
            line-height 48px
            letter-spacing 5px

@media(max-width 1500px)
    .swiperV-pagination
        width 100px    
        &--active
            background #000 url('./../images/indicator.png') no-repeat 16px center
        .swiper-pagination-bullet
            &.swiper-pagination-bullet-active
                &:before
                    left: -14px;
                    top: 24px;
@media(max-width 1024px)
    .swiperV-pagination
        width 50px
        background #000
    .swiper-container-vertical>.swiper-pagination-bullets .swiper-pagination-bullet
        display none
 


.dots-wrapper
    width 100%
    z-index: 2
    position: absolute
    top 50%
    transform translateY(-50%)
    // display flex
    // justify-content space-between
    
.dot 
    margin 0 calc( (100% / 100 / 2) - 1px)
    display none
    float left
    background-color: black
    width: 2px
    height: 2px
    border-radius 50%
    &--light 
        background-color #fff


