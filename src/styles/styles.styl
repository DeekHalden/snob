.range-slider
    width: calc(100% - 280px);
    position absolute
    top 50%
    left 140px
    margin 0 auto
    z-index 2
    transform translateY(-50%)
    &__anchors
        position relative
        opacity 0
        transition .2s ease all
        &--important
            display block 
            opacity 1 
    &__anchor
        background url('./../images/diamond-anchor.svg') no-repeat center
        position absolute
        top 7px
        background-size cover
        width 26px 
        height 26px
        display block
        transition .2s ease all
        &--bordered
            width 26px
            height 26px
            background url('./../images/diamond-anchor-bordered.svg') no-repeat center
            background-size cover
        &:nth-child(1)
            left -12px
        &:nth-child(2)    
            left 27.9%
        &:nth-child(3)
            right 27.9%
        &:nth-child(4)
            right 1px


.swiper-container 
    width 100%
    height 100%
    transition 1s ease all
    z-index 1
    &--active
        transition 2s ease all !important
        z-index 2
.swiper-container-v
    .swiper-slide
        background-color #000 
    // .swiper-slide:not(:first-child),  .swiper-slide:not(:nth-child(2))
    //     background-color #fff
    .swiper-slide
        transition 1s ease all
    
        
.swiperV-pagination
    position fixed
    z-index 1
    top 0
    bottom 0px
    right auto
    left 0
    width 400px
    height 100%
    background-color #000
    transform translateX(0) 
    flex-direction column
    justify-content center
    align-items center
    display flex
    transition .5s linear all
    left -400px
    &--active
        background #000 url('./../images/indicator.png') no-repeat 91px center
        left 0
    // &:after
    //     content ''
    //     position absolute
    //     z-index 1
    //     height 100%
    //     width 20px
    //     top 50%
    //     transform translateY(-50%)
    //     left 123px
    .swiper-pagination-bullet   
        transition .5s ease all
        position relative
        background-color #fff
        font-size 0
        border-radius 0
        width 20px
        height 20px
        transform rotate(45deg)
        opacity 0
        margin 50px 0 !important
        &--active
            opacity .2
        &:first-child
            display none
        &.swiper-pagination-bullet-active
            transition .5s ease all
            background: url('./../images/big-diamond.svg') no-repeat center;
            background-size: 20px 20px !important;
            position relative
            opacity 1
            &:before
                z-index 2
                transition .5s ease all
                position: absolute;
                content: '-';
                width: 1px;
                height: 20px;
                color: #fff;
                left: -100px;
                background: #fff;
                transform: rotate(45deg);
                left: -68px;
                top: 77px;
.swiperH-pagination
    .swiper-pagination-bullet
        display block
        width auto
        height 20px
        color #fff
        opacity 1
        background none
        position relative
        text-align right
        padding-right 40px
        letter-spacing 5px
        & + .swiper-pagination-bullet 
            margin-top 150px
            
        &:after
            opacity .2
            position absolute
            content ''
            background #fff
            width 20px
            right 0
            height 20px
            transform rotate(45deg)
            
        &:first-child, &:nth-child(3), &:nth-child(5), &:nth-child(7)
            display none
        &:nth-child(2)
            margin-top 0 !important
        &.swiper-pagination-bullet-active
            &:after
                opacity 1
                background-image: -ms-radial-gradient( 50% 50%, circle closest-side, rgb(224,195,135) 0%, rgba(175,147,88,0) 100%);
            
.swiper-slide
    height 100%
    // background-color #fff
    position relative
    &--first
        // transition-delay 1s
        background-color #000
    &--map
        background-color #fff  !important
        transition 4s linear all
        .swiper-slide
            &__content
                pointer-events none
                width 100%
                height 100%
                &--active
                    color #fff
            &__dot-description
                position absolute
                right 48%
                bottom 100px
                transform translateX(50%)
                width 900px
                p
                    text-align right
                    &:not(:first-child)
                        display none
                    
        
    &--map-active
        background-color #000 !important
    
    .wrapper
        width 100%
        height 100%
        transition 1s linear all
        background-color #fff
        right -100%
        position relative
            // transform  translateX(50%)
        &--active-top
            top -100%
        &--white
            right -100%
            position absolute
        &--white-active
            right 30%
            right 0
        &--black
            right -100%
            background-color #000
        &--black--active
            right 30%
            right 0
    &--menu-wrapper
        background #000
        h1
            color #fff
    &__link
        display block
        color #fff
        .icon-close2
            transform rotate(45deg)
            color #fff
            opacity .2
        &--active
            .icon-close2
                color $gold
                
    
        
    &--bottom
        background #fff
        z-index 123
