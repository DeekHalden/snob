.flip-container 
    perspective: 1000px;
    
    &__wrapper
        transition: 0.6s
        transform-style: preserve-3d
        position: relative
        // transform: rotateY(180deg);
        &--active 
            transform: rotateY(180deg);
    &__front, &__back
        width 100%
        height 480px
        backface-visibility: hidden;
        position: absolute;
        top: 0;
        left: 0;
    &__front
        z-index: 2;
        /* for firefox 31 */
        transform: rotateY(0deg);
    &__back
        display none
        border 2px solid $gold
        border-radius 2px
        transform: rotateY(180deg);
        
    /*&:hover .flip-container__wrapper
        transform: rotateY(180deg);*/
        
