$gold = #af9358

$transition = .5s ease all
@font-face 
    font-family Roboto-reg
    src url(./../fonts/Roboto-Regular.ttf)
    
*
    box-sizing border-box

@import "./icomoon.css" 
@import "./normalize.css" 
@import "./ion.rangeSlider.css" 
@import "./ion.rangeSlider.skinFlat.css"
@import "./swiper.min.css"

html
    font-family Roboto-reg
    font-weight: normal !important

body 
    width 100%;
    text-align center
    overflow hidden
    
    margin 0
    
.body
    background-color #fff
    &--active
        background-color #000
canvas
    position: absolute
    top 0
    left 0
    z-index 1
    

a
    transition $transition 
    font-size 20px
    &:hover
        color $gold
.menu-close, .menu-toggler
    display: none
    z-index 10
    position absolute
    top 50px
    left 50%
    transform  translateX(-50%)
    cursor pointer
    font-size 20px
    &--active
        color #fff
.menu-close
    font-size 30px
    display none
    color #fff
.main-text
    text-transform uppercase
    display none
    position absolute
    top 52%
    left 50%
    transform translateY(-50%) translateX(-50%)
    p
        font-size 24px
.main-text-start
    text-transform uppercase
    font-size 24px
    display none
    position absolute
    top calc(50% + 255px)
    left 50% 
    transform translateX(-50%) translateY(-50%)
    cursor pointer
.slider-container
    z-index: 1
    width auto
    height 100vh
    position relative
