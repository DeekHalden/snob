    .text
        font-weight 100
        line-height 10px      
        color inherit
        position absolute
        right -105%
        transition .1s linear all
        text-align left
        bottom  10%
        width: 100%
        border-bottom 9px solid #af9358
        border-radius 5px
        h2
            margin 0
            font-size 30px  
            display inline-block
        &--active
            transition 1.5s linear all
            right -105% !important
    .video-cont
        position fixed
        top calc(50% - 91px)
        left 0
        right 0
        transform translateY(-50%)
    .video
        display none
        position absolute
        top 40%
        left 50%
        transform translateY(-50%) translateX(-50%)
        &--active
            display block

    &__text
        max-width 1000px
        font-weight 100
        text-align left
        font-size 90px
        position absolute
        left 50%
        transform translateX(-50%) translateY(-50%)
        top 70%
        color transparent
        transition 1.5s linear all
        transition-delay .5s
        &--active
            color #fff
